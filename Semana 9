import java.util.Scanner;

public class Ejercicio3 {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        System.out.println("Ingrese la primera cadena:");
        String cadena1 = scanner.nextLine();

        System.out.println("Ingrese la segunda cadena:");
        String cadena2 = scanner.nextLine();

        if (cadena1.contains(cadena2)) {
            System.out.println("La segunda cadena es una subcadena de la primera cadena.");
        } else {
            System.out.println("La segunda cadena no es una subcadena de la primera cadena.");
        }

    }
}

4//
public class Ejercicio4 {
    public static void main(String[] args) {
        String str1 = "Esta es una prueba de string, que verifica donde esta un string";
        String str2 = "esta";
        String str3 = "string";

        // Convertir a minúsculas para ignorar mayúsculas y minúsculas
        String str1Lower = str1.toLowerCase();
        String str2Lower = str2.toLowerCase();
        String str3Lower = str3.toLowerCase();

        // Encontrar todas las posiciones de str2 en str1
        System.out.println("Posiciones de \"" + str2 + "\" en str1:");
        int index = str1Lower.indexOf(str2Lower);
        while (index >= 0) {
            System.out.println(index);
            index = str1Lower.indexOf(str2Lower, index + 1);
        }

        // Encontrar todas las posiciones de str3 en str1
        System.out.println("Posiciones de \"" + str3 + "\" en str1:");
        index = str1Lower.indexOf(str3Lower);
        while (index >= 0) {
            System.out.println(index);
            index = str1Lower.indexOf(str3Lower, index + 1);
        }
    }
}
